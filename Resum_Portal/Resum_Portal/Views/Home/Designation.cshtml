@model IEnumerable<Resum_Portal.Models.tbl_Designation>

@{
    ViewBag.Title = "Designation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/all.css" rel="stylesheet" />
<style>
 .link {
        text-decoration: none;
        color: black;
    }
    .link:hover {
        color:red;
    }
 </style>
<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title"><i class="fa-solid fa-hat-cowboy me-2 bg-gray-dark p-2 text-light rounded-circle"></i>Designation</h4>
                <button class="btn btn-primary float-end ms-3 me-3 mb-3"><a href="/home/CreateDesignation" class="link">Add Designation</a></button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-responsive-md" id="myTable">
                        <thead>
                            <tr class="bg-primary">
                                <th class="width80"><strong class="text-light">#</strong></th>
                                <th><strong class="text-light">Designation</strong></th>
                                <th><strong class="text-light">Status</strong></th>
                                @*<th></th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                int i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td><strong>@i</strong></td>
                                        <td>@item.Designation</td>
                                        @if (item.Status.Equals(true))
                                        {
                                            <td><a href="/home/ChangeStatus?id=@item.Designation"><span class="badge light badge-success">Active</span></a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/home/ChangeStatus?id=@item.Designation"><span class="badge light badge-danger">Inactive</span></a></td>

                                        }

                                    </tr>
                                    i++;
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
